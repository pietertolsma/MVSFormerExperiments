{
    "name": "MVSFormer",
    "n_gpu": 1,
    "fp16": false,
    "arch": {
        "args": {
            "refine_steps": 4,
            "bilinear": true,
            "custom_softmax": false,
            "vit_only": false,
            "use_resnet": false,
            "backbone_pretrained": false,
            "fix": false,
            "depth_type": "ce",
            "mask_out_range": false,
            "focal": false,
            "gamma": 2.0,
            "fusion_type": "cnn",
            "inverse_depth": true,
            "attn_temp": 2.0,
            "base_ch": 8,
            "ndepths": [
                32,
                16,
                8,
                4
            ],
            "feat_chs": [
                8,
                16,
                32,
                64
            ],
            "depth_interals_ratio": [
                4.0,
                2.67,
                1.5,
                1.0
            ],
            "multi_scale": false,
            "vit_args": {
                "twin": true,
                "rescale": 0.5,
                "cross_attention": false,
                "do_vit": true,
                "patch_size": 16,
                "qk_scale": "default",
                "vit_arch": "alt_gvt_small",
                "vit_path": "./pretrained_weights/alt_gvt_small.pth",
                "vit_ch": [
                    64,
                    128,
                    256,
                    512
                ],
                "out_ch": 64,
                "out_chs": [
                    8,
                    16,
                    32,
                    64
                ],
                "att_fusion": true,
                "nhead": 6
            }
        }
    },
    "data_loader": [
        {
            "type": "TOTELoader",
            "args": {
                "data_set_type": "multi_scale",
                "rotated": false,
                "datapath": "../ToteMVS",
                "train_data_list": "lists/dtu/train.txt",
                "val_data_list": "lists/dtu/test.txt",
                "random_mask": false,
                "mask_path": "/home/wmlce/DTU_MVSNet/DTU_aug_masks/irregular_mask*",
                "mask_rate": 0.25,
                "mask_type_rates": [
                    0.25,
                    0.5
                ],
                "mode": "train",
                "nviews": 6,
                "num_depths": 192,
                "multi_scale": false,
                "multi_scale_args": {
                    "scales": [
                        [
                            512,
                            512
                        ],
                        [
                            576,
                            576
                        ],
                        [
                            640,
                            640
                        ],
                        [
                            704,
                            704
                        ],
                        [
                            768,
                            768
                        ]
                    ],
                    "resize_range": [
                        1.0,
                        1.2
                    ],
                    "scale_batch_map": {
                        "512": 4,
                        "576": 4,
                        "640": 4,
                        "704": 4,
                        "768": 1,
                        "832": 2,
                        "896": 2,
                        "960": 2,
                        "1024": 2
                    }
                },
                "interval_scale": 1.06,
                "resize_scale": 1,
                "height": 768,
                "width": 768,
                "shuffle": true,
                "seq_size": 7,
                "batch_size": 8,
                "crop": true,
                "consist_crop": false,
                "num_workers": 2,
                "augment": false,
                "aug_args": {
                    "brightness": 0.2,
                    "contrast": 0.1,
                    "saturation": 0.1,
                    "hue": 0.05,
                    "min_gamma": 0.9,
                    "max_gamma": 1.1
                }
            }
        }
    ],
    "optimizer": {
        "args": {
            "vit_lr": 3e-05,
            "lr": 0.001,
            "weight_decay": 0.01,
            "layer_decay": 0.75,
            "min_lr": 0.01,
            "warmup_steps": 500
        }
    },
    "trainer": {
        "epochs": 15,
        "seq": true,
        "save_dir": "saved/",
        "save_period": 1,
        "iter_save_period": 2000,
        "verbosity": 2,
        "logging_every": 5,
        "early_stop": 10,
        "tensorboard": false,
        "depth_scale": 1.0,
        "eval_freq": 1,
        "monitor": "min mean_error",
        "mask_bg": false
    }
}